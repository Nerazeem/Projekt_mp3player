<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000"
    >
    <ImageView
        android:id="@+id/noteIcon"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:src="@drawable/icon1" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/noteIcon"
        android:textColor="@color/colorGreen"
        android:text="Nazwa utworu"
        android:textSize="20sp"
        android:id="@+id/txtTytul"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/noteIcon"
        android:layout_below="@+id/txtTytul"
        android:textColor="@color/colorGreen"
        android:text="Wykonawca"
        android:textSize="20sp"
        android:id="@+id/txtAutor"/>
    <ImageView
        android:id="@+id/iconStop"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:src="@drawable/icon_stop"
        />
    <ImageView
        android:id="@+id/iconPlay"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_toLeftOf="@id/iconStop"
        android:layout_centerInParent="true"
        android:src="@drawable/icon_play"
        />

</RelativeLayout>